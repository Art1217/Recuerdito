<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/widget_background"
    android:padding="12dp">

    <!-- Header -->
    <TextView
        android:id="@+id/widget_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ“… PrÃ³ximos recordatorios"
        android:textColor="#FFFFFF"
        android:textSize="13sp"
        android:textStyle="bold"
        android:paddingBottom="8dp" />

    <!-- Item 1 -->
    <LinearLayout
        android:id="@+id/widget_item1_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="6dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/widget_item1_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="Recordatorio 1" />

            <TextView
                android:id="@+id/widget_item1_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#CCFFFFFF"
                android:textSize="10sp"
                android:text="Fecha" />
        </LinearLayout>

        <TextView
            android:id="@+id/widget_item1_remaining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFE082"
            android:textSize="10sp"
            android:textStyle="bold"
            android:paddingStart="8dp"
            android:text="Pronto" />
    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#44FFFFFF"
        android:layout_marginBottom="6dp" />

    <!-- Item 2 -->
    <LinearLayout
        android:id="@+id/widget_item2_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="6dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/widget_item2_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="Recordatorio 2" />

            <TextView
                android:id="@+id/widget_item2_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#CCFFFFFF"
                android:textSize="10sp"
                android:text="Fecha" />
        </LinearLayout>

        <TextView
            android:id="@+id/widget_item2_remaining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFE082"
            android:textSize="10sp"
            android:textStyle="bold"
            android:paddingStart="8dp"
            android:text="Pronto" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#44FFFFFF"
        android:layout_marginBottom="6dp" />

    <!-- Item 3 -->
    <LinearLayout
        android:id="@+id/widget_item3_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/widget_item3_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="Recordatorio 3" />

            <TextView
                android:id="@+id/widget_item3_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#CCFFFFFF"
                android:textSize="10sp"
                android:text="Fecha" />
        </LinearLayout>

        <TextView
            android:id="@+id/widget_item3_remaining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFE082"
            android:textSize="10sp"
            android:textStyle="bold"
            android:paddingStart="8dp"
            android:text="Pronto" />
    </LinearLayout>

</LinearLayout>
